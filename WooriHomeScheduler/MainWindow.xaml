<Window
    x:Class="WooriHomeScheduler.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WooriHomeScheduler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="우리홈치과 스케줄러"
    Width="1550"
    Height="1000"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="3,0">
            <TextBlock
                Margin="5"
                FontSize="20"
                FontWeight="Bold"
                Text="✨ Input" />
            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="근무 기간" />
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="3">
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="시작일 : " />
                        <DatePicker SelectedDate="{Binding StartDate}" />
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="종료일 : " />
                        <DatePicker SelectedDate="{Binding EndDate}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="근무 인원" />
            <TextBlock Margin="5" Text="공백으로 구분해 입력하시오." />
            <TextBox Margin="5,0" Text="{Binding Workers}" />

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="{Binding Holidays}" />
            <GroupBox Margin="0,10,0,0" Header="자동계산 휴무일">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Margin="5,5,5,0" Text="매주 수요일" />
                        <TextBox
                            MaxHeight="100"
                            Margin="5"
                            Text="{Binding EveryWednesdays}"
                            VerticalScrollBarVisibility="Auto" />
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Margin="5,5,5,0" Text="2번째 목요일, 4번째 일요일" />
                        <TextBox
                            MaxHeight="100"
                            Margin="5"
                            Text="{Binding ThursAndSundays}"
                            VerticalScrollBarVisibility="Auto" />
                    </StackPanel>
                </Grid>
            </GroupBox>
            <GroupBox Margin="0,5" Header="커스텀 휴무일">
                <StackPanel Orientation="Horizontal">
                    <Calendar
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        SelectedDate="{Binding SelectedHoliDate}"
                        SelectionMode="MultipleRange" />
                    <ListView
                        MaxHeight="160"
                        Margin="10"
                        ItemsSource="{Binding CustomHolidays}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding DateString}"
                                    Header="날짜" />
                                <GridViewColumn Width="120" Header="신난다 무료휴일">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsFree}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="40" Header="X">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.DeleteHolidayCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Content="삭제" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </GroupBox>

            <GroupBox Margin="0,5" Header="커스텀 근무일 (휴무일보다 우선적으로 적용됩니다)">
                <StackPanel Orientation="Horizontal">
                    <Calendar
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        SelectedDate="{Binding SelectedWorkDate}"
                        SelectionMode="MultipleRange" />
                    <ListView
                        MaxHeight="160"
                        Margin="10"
                        ItemsSource="{Binding CustomWorkdays}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn
                                    Width="120"
                                    DisplayMemberBinding="{Binding DateString}"
                                    Header="날짜" />
                                <GridViewColumn Width="120" Header="근무자수">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBox Width="50" Text="{Binding WorkerCount}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn Width="40" Header="X">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button
                                                Command="{Binding DataContext.DeleteWorkdayCommand, RelativeSource={RelativeSource AncestorType=ListView}}"
                                                CommandParameter="{Binding}"
                                                Content="삭제" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </GroupBox>

            <Button
                Width="140"
                Height="30"
                Margin="5,10,5,5"
                HorizontalAlignment="Center"
                Command="{Binding CalculateCommand}"
                Content="Let's go 👉👉👉"
                FontSize="15" />
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="5"
                FontSize="20"
                FontWeight="Bold"
                Text="🏥 Output" />
            <TextBox
                Grid.Row="1"
                Margin="5"
                AcceptsReturn="True"
                FontFamily="Malgun Gothic"
                Text="{Binding OutputText}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
        </Grid>
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="5"
                FontSize="20"
                FontWeight="Bold"
                Text="📊 Statistics" />
            <TextBox
                Grid.Row="1"
                Margin="5"
                AcceptsReturn="True"
                FontFamily="Malgun Gothic"
                Text="{Binding StatisticText}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
        </Grid>
    </Grid>
</Window>
