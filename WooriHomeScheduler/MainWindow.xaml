<Window
    x:Class="WooriHomeScheduler.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WooriHomeScheduler"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="우리홈치과 스케줄러"
    Width="1000"
    Height="1000"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="3">
            <TextBlock
                Margin="5"
                FontSize="20"
                FontWeight="Bold"
                Text="Input" />
            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="근무 기간" />
            <StackPanel Orientation="Horizontal">
                <StackPanel Margin="3">
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="시작일 : " />
                        <DatePicker SelectedDate="{Binding StartDate}" />
                    </StackPanel>
                    <StackPanel Margin="5" Orientation="Horizontal">
                        <TextBlock VerticalAlignment="Center" Text="종료일 : " />
                        <DatePicker SelectedDate="{Binding EndDate}" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="근무 인원" />
            <TextBlock Margin="5" Text="공백으로 구분해 입력하시오." />
            <TextBox Margin="5,0" Text="{Binding Workers}" />

            <TextBlock
                Margin="0,10,0,0"
                FontWeight="Bold"
                Text="{Binding Holidays}" />
            <TextBlock Margin="5,5,5,0" Text="매주 수요일" />
            <TextBox
                MaxHeight="100"
                Margin="5"
                Text="{Binding EveryWednesdays}"
                VerticalScrollBarVisibility="Auto" />
            <TextBlock Margin="5,5,5,0" Text="마지막 일요일" />
            <TextBox
                MaxHeight="100"
                Margin="5"
                Text="{Binding LastSundays}"
                VerticalScrollBarVisibility="Auto" />
            <GroupBox Header="그 외 휴무일은 아래 캘린더에서 직접 눌러주도록 하자">
                <StackPanel>
                    <Calendar
                        Margin="5,0"
                        HorizontalAlignment="Left"
                        SelectedDate="{Binding SelectedCustomDate}"
                        SelectionMode="MultipleRange" />
                    <ListView
                        MaxHeight="200"
                        Margin="10"
                        ItemsSource="{Binding CustomHolidays}">
                        <ListView.View>
                            <GridView>
                                <!--  텍스트 열  -->
                                <GridViewColumn
                                    Width="200"
                                    DisplayMemberBinding="{Binding DateString}"
                                    Header="Date" />
                                <!--  체크박스 열  -->
                                <GridViewColumn Width="200" Header="근무일수를 늘리지 않는 휴일?">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsFree}" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </GroupBox>

            <Button
                Width="140"
                Height="30"
                Margin="5,10,5,5"
                HorizontalAlignment="Center"
                Command="{Binding CalculateCommand}"
                Content="Let's go 👉👉👉"
                FontSize="15" />
        </StackPanel>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="5"
                FontSize="20"
                FontWeight="Bold"
                Text="Output" />
            <TextBox
                Grid.Row="1"
                AcceptsReturn="True"
                Text="{Binding OutputText}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible" />
        </Grid>
    </Grid>
</Window>
